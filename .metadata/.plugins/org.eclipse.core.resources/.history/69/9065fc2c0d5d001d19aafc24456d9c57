#ifndef INC_GLOBAL_H_
#define INC_GLOBAL_H_

#include <software_timer.h>
/*
 * Normal mode
 * 0 -> 9 <=> status = 0 -> 9
 */

/*
 * Button 1 click states
 */
#define INIT		99
#define RST			0
#define INC			1
#define DEC			-1

/*
 * Button long-press states
 */
#define INC_3s		4
#define DEC_3s		2
/*
 * Auto Countdown states
 */
#define COUNT_DOWN	9
#define INTERRUPT	-9

/*
 * Global variable
 */
extern int status;
extern int CYCLE;
extern int globalCount;
#endif /* INC_GLOBAL_H_ */
